
<div class = "col-md-8 offset-md-1">
<h1>Follow-Users</h1>
<table class="table table-striped">
  <thead>
   <tr>
    <th>image</th>
    <th>name</th>
    <th></th>
    <th></th>
   </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
       <td><%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></td>
       <td><%= user.name %></td>
       <td><p>フォロー数：<%#= user.followers.count %></p></td>
       <td><p>フォロワー数：<%#= user.followings.count %></p></td>
       <td><%= link_to "Show", user_path(user.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>