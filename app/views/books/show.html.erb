<% if flash[:notice] %>
 <p id="notice">
<%= flash[:notice] %>
 </p>
<% end %>


<div class="container">
 <div class="row">
  <div class="col-md-3">
   <div class="sidebar_content">
    <div>
     <h1>User info</h1>
     <%= render 'users/user', user: @user %>
    </div>
    <div>
     <h1>New book</h1>
     <%= render 'books/book', book: @newbook %>
    </div>
   </div>
  </div>

  <div class="col-md-8 offset-md-1">
   <h1>Book detail</h1>
   <table class="table table-striped">
     <tbody>
       <tr>
         <td>
          <%= attachment_image_tag @book.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></br>
          <%= link_to @user.name, user_path(@user) %></td>
         <td><%= link_to @book.title, book_path(@book) %></td>
         <td><%= @book.body %></td>
         <!--「いいね機能」ここから追加-->
         <td>
          <% if @book.favorited_by?(current_user) %>
           <%= link_to book_favorites_path(@book.id), method: :delete do %>
           ♥<%= @book.favorites.count %>
           <% end %>
          <% else %>
           <%= link_to book_favorites_path(@book.id), method: :post do %>
           ♡<%= @book.favorites.count %>
           <% end %>
          <% end %>
         </td>
         <td><p>コメント数：<%= @book.book_comments.count %></p></td>
         <td>
          <% if @book.user.id == current_user.id %>
          <%= link_to "Edit", edit_book_path(@book), class: "btn btn-success" %>
          <%= link_to "Destroy", book_path(@book), class: "btn btn-danger", method: :delete, "data-confirm" => "本当に消しますか？" %>
          <% end %>
         </td>
       </tr>
          <!--「コメント機能」ここから追加--
       <table>
        <tr>
         <% @book.book_comments.each do |book_comment| %>
         <td>
          <%= attachment_image_tag book_comment.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></br>
          <%= link_to book_comment.user.name, user_path(book_comment.user) %>
         </td>
         <td><%= book_comment.comment %></td>
         <td>
          <% if book_comment.user.id == current_user.id %>
           <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, class: "btn btn-danger" %>
          <% end %>
         </td>
        </tr>
         <% end %>
       </table>

       <div class="new-comment">
        <%= form_with(model:[@book, @book_comment], local: true) do |f| %>
          <%= f.text_area :comment, rows:'5' %>
          <%= f.submit "送信" %>
        <% end %>
       </div>

     </tbody>
   </table>
  </div>
 </div>
</div>