<div>
  <h1>User info</h1>
  <%= render 'users/user', user: @user %>
</div>

<div>
<h1>New book</h1>
  <%= render 'books/book', book: @book %>
</div>

<div>
  <h1>Books</h1>
  <table>
    <thead>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </thead>
    <tbody>
      <%= @books.each do |book| %>
      <tr>
        <td>
         <%= link_to user_path(book.user) %>
         <%= attachment_image_tag book.user, :profile_image %>
        </td>
        <td>
          <%= link_to book.title, book_path(book.id) %>
        </td>
        <td><%= book.body %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>