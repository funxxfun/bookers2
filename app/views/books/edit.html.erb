<% if flash[:notice] %>
 <p id="notice">
<%= flash[:notice] %>
 </p>
<% end %>



<div class="container">
 <div class="center-block">
  <div class="col-md-3">
   <h1>Editing Book</h1>
    <%= form_with model: @book, local:true do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <div>
      <%= f.submit 'Update Book', class: "btn btn-secondary" %>
    </div>
  <% end %>
  
  <%= link_to "Show", book_path(@book.id) %>
  <%= "|" %>
  <%= link_to "Back", books_path %>
 </div>
 </div>
</div>