<!DOCTYPE html>
<html>
 <head>
  <title>Bookers2</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <!--<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">-->
  
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
 </head>
 <body>
  <header class="navbar navbar-expand-lg navbar-light bg-light navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="/">Bookers</a>

      <nav>
        <ul class="navbar-nav ml-auto">
          <% if user_signed_in? %>
            <li><%= link_to 'Home',user_path(current_user),class: 'fas fa-home nav-link text-right' %></li>
            <li><%= link_to 'Users',users_path,class: 'fas fa-users nav-link text-right' %></li>
            <li><%= link_to 'Books',books_path,class: 'fas fa-book-open nav-link text-right' %></li>
            <li><%= link_to 'logout',destroy_user_session_path,class: 'fas fa-sign-out-alt nav-link text-right', method: :delete %></li>
           <% else %>
            <li><%= link_to 'Home',root_path,class: 'fas fa-home nav-link text-right' %></li>
            <li><%= link_to 'About',home_about_path,class: 'fas fa-link nav-link text-right' %></li>
            <li><%= link_to 'sign up',new_user_registration_path,class: 'fas fa-user-plus nav-link text-right' %></li>
            <li><%= link_to 'login',new_user_session_path,class: 'fas fa-sign-in-alt nav-link text-right' %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  <!--検索フォームの呼び出し-->
  <div>
  <% if user_signed_in? %>
   <%= render 'searches/form' %>
  <% end %>
  </div>
    
  </header>
 </body>

    <%= yield %>


    <footer>
      <div class='container'>
        <div class ='row'>
          <p class="text-center">CopyRight Infratop.inc</p>
        </div>
      </div>
    </footer>

</html>
