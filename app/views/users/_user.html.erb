<%= attachment_image_tag user,:profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
  <table class="table table-responsive">
  <tr><th>name</th><td><%= user.name %></td></tr>
  <tr><th>introduction</th><td><%= user.introduction %></td></tr>
  <tr><th>follows</th><td><%= user.followings.count %></td></tr>
  <tr><th>followers</th><td><%= user.followers.count %></td></tr>
  </table>
  
  <% if current_user == user %>
    <tr><th colspan="2">
      <%= link_to edit_user_path(user), class: "btn btn-default btn-block border col-12 mx-auto" do %>
      <span class="fas fa-user-cog"></span>
      <% end %>
    </th></tr>
  <% else %>
    <%= link_to "フォロー", user_relationships_path(user.id), method: :post, class: "btn btn-success" %>
  <% end %>

